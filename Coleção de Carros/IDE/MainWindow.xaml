<Window x:Class="IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE"
        mc:Ignorable="d"
        Title="MainWindow" Height="533" Width="800"
        Background="WhiteSmoke" >
    <Grid Margin="4,0,2,4" Background="LightGray">
        <Button Background="DodgerBlue" Margin="193,10,547,468" Click="Button_Click_1">Editar</Button>
        <Button Background="Red" Margin="252,10,486,468" RenderTransformOrigin="0.524,-0.17">Excluir</Button>
        <Button Background="Gray" Margin="715,469,22,10">Sair</Button>
        <Button Background="LightGreen" Margin="10,10,615,468" Click="Button_OpenWindowCadastro">Adicionar Carro</Button>

        <DataGrid x:Name="dataGridCarros" Margin="10,58,10,49" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                
                <DataGridTextColumn Header="Nome" Binding="{Binding nome}" Width="*"/>
                <DataGridTextColumn Header="Marca" Binding="{Binding marca}" Width="*"/>
                <DataGridTextColumn Header="Ano" Binding="{Binding ano}" Width="*"/>
                <DataGridTextColumn Header="Preço" Binding="{Binding preco}" Width="*"/>
                
            </DataGrid.Columns> 
        </DataGrid>



    </Grid>



</Window>
