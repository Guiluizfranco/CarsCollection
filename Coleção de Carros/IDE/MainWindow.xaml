<Window x:Class="IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE"
        mc:Ignorable="d"
        Title="MainWindow" Height="533" Width="800"
        Background="WhiteSmoke" >
    <Grid Background="LightGray" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
           
            <RowDefinition Height="*"/>
           
            <RowDefinition Height="Auto"/>
           
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

      
        <Button Grid.Row="0"
            Grid.Column="0"
            Content="Adicionar Carro"
            Background="LightGreen"
            Width="150"
            Height="35"
            HorizontalAlignment="Left"
            Click="Button_OpenWindowCadastro"/>

        
        <Button Grid.Row="0"
            Grid.Column="1"
            Content="Sair"
            Background="Gray"
            Width="100"
            Height="35"
            HorizontalAlignment="Right"/>

       
        <DataGrid x:Name="dataGridCarros"
              Grid.Row="1"
              Grid.ColumnSpan="2"
              Margin="0,10,0,10"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False">
            <DataGrid.Columns>

                <DataGridTextColumn Header="ID"
                                Binding="{Binding id}"
                                Width="*"/>

                <DataGridTextColumn Header="Nome"
                                Binding="{Binding nome, UpdateSourceTrigger=PropertyChanged}"
                                Width="*"/>

                <DataGridTextColumn Header="Marca"
                                Binding="{Binding marca, UpdateSourceTrigger=PropertyChanged}"
                                Width="*"/>

                <DataGridTextColumn Header="Ano"
                                Binding="{Binding ano, UpdateSourceTrigger=PropertyChanged}"
                                Width="*"/>

                <DataGridTextColumn Header="Preço"
                                Binding="{Binding preco, UpdateSourceTrigger=PropertyChanged}"
                                Width="*"/>

                <DataGridTemplateColumn Header="Editar" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Editar"
                                Background="CornflowerBlue"
                                Padding="10,3"
                                Click="Button_EditarCarro"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Editar" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Excluir"
                                Background="Firebrick"
                                Padding="10,3"
                                Click="Button_ExcluirCarro"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

      
       
    </Grid>




</Window>
