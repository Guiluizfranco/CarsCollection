<Window x:Class="IDE.Cadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE"
        mc:Ignorable="d"
        Title="Cadastro" Height="493" Width="335">
    <Grid Background="AliceBlue">
        
        <Label Margin="121,10,121,437">Cadastrar Carro</Label>
        
        <Label Margin="84,73,209,381">Nome:</Label>
        <TextBox x:Name="TextNome" Margin="84,101,83,348" RenderTransformOrigin="0.5,0.5"></TextBox>

        <Label Margin="84,155,0,297" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="62">Marca</Label>
        <TextBox x:Name="TextMarca" Margin="84,180,83,269"></TextBox>

        <Label Margin="88,237,209,215">Ano</Label>
        <TextBox x:Name="TextAno" Margin="84,262,83,187"></TextBox>

        <Label Margin="88,323,207,129">Preço</Label>
        <TextBox x:Name="TextPreco" Margin="84,348,83,101"></TextBox>

        <Button Background="LightGreen" Margin="108,422,107,23" Click="Button_Cadastrar">Cadastrar</Button>
    </Grid>

</Window>
