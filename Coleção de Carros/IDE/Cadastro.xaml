<Window x:Class="IDE.Cadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE"
        mc:Ignorable="d"
        Title="Cadastro" Height="493" Width="335">
    <Grid Background="AliceBlue" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Label Grid.Row="0" Grid.ColumnSpan="2"
           Content="Cadastrar Carro"
           FontSize="22"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           Margin="0,10,0,30"/>


        <Label Grid.Row="1" Grid.Column="0" Content="ID:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextId"
             Grid.Row="1"
             Grid.Column="1"
             Height="30"
             Margin="0,5"/>


        <Label Grid.Row="2" Grid.Column="0" Content="Nome:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextNome"
             Grid.Row="2"
             Grid.Column="1"
             Height="30"
             Margin="0,5"/>


        <Label Grid.Row="3" Grid.Column="0" Content="Marca:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextMarca"
             Grid.Row="3"
             Grid.Column="1"
             Height="30"
             Margin="0,5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Ano:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextAno"
             Grid.Row="4"
             Grid.Column="1"
             Height="30"
             Margin="0,5"/>


        <Label Grid.Row="5" Grid.Column="0" Content="Preço:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextPreco"
             Grid.Row="5"
             Grid.Column="1"
             Height="30"
             Margin="0,5"/>


        <Button Grid.Row="7"
            Grid.ColumnSpan="2"
            Content="Cadastrar"
            Height="40"
            Width="150"
            Background="LightGreen"
            HorizontalAlignment="Center"
            Margin="0,20,0,10"
            Click="Button_Cadastrar"/>
    </Grid>


</Window>
